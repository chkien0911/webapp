@model IPagedList<Ivs.Models.Master.MS_DepartmentModel>
@using GridMvc.Html;
@using Ivs.Models.Master;

@Html.Partial("_ErrorMessagePartial")
                    
@(Html.IvsDataGrid<MS_DepartmentModel>(this.Model)
            .Columns(col =>
            {
                col.Add(x => x.ID).SetPrimary().SetHidden();
                col.Add(x => x.Code).SetTitle("Dept Code").SetAlignmentValue(CommonData.Alignment.Default);
                col.Add(x => x.Name1).SetTitle("Dept Name (VN)").SetAlignmentValue(CommonData.Alignment.Default);
                col.Add(x => x.Name2).SetTitle("Dept Name (EN)").SetAlignmentValue(CommonData.Alignment.Default);
            })
            .SetPagination()
            .GenerateCheckedColumn()
)
        
